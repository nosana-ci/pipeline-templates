{
    "version": "0.1",
    "type": "container",
    "meta": {
      "trigger": "dashboard",
      "system_requirements": {
        "required_vram": 24
      }
    },
    "ops": [
      {
        "type": "container/run",
        "id": "dreambooth-train",
        "args": {
          "cmd": [
            "accelerate", "launch", "train_dreambooth.py",
            "--pretrained_model_name_or_path=runwayml/stable-diffusion-v1-5",
            "--instance_data_dir=/data/images",
            "--output_dir=/data/output",
            "--instance_prompt=photo of sks person",
            "--resolution=512",
            "--train_batch_size=1",
            "--gradient_accumulation_steps=1",
            "--learning_rate=5e-6",
            "--lr_scheduler=constant",
            "--lr_warmup_steps=0",
            "--max_train_steps=800"
          ],
          "image": "docker.io/nosana/dreambooth:0.0.1",
          "gpu": true,
          "volumes": ["/data"],
          "expose": 7860,
          "env": {
            "USE_AMP": "true"
          }
        }
      }
    ]
  }
  